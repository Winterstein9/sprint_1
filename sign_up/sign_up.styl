$color-1 = #343434
$color-2 = #51b5c5

.sign__up__main
    display flex
    align-items center
    justify-content center
    height 100%

.si__sign__up__div
    padding 20px 0
    width 300px
    background-color $color-1
    display flex
    justify-content center
    border-radius 10px

.si__sign__up__form
    display flex
    flex-direction column
    align-items center

.si__login__form
    flex-direction column

.si__data__user__div
    +.si__data__user__div
        margin-top 25px

.si__password__div
    margin-top 15px

.si__data__user__buttons
    width 180px
    background-color $color-1
    color silver
    border none
    border-bottom 2px dashed $color-2
    text-align center
    font-size 20px
    outline none

.si__sign__in__button
    width 180px
    padding 0px
    font-size 18px
    margin-top 20px
    background-color $color-2
    border none
    color $color-1

.si__sign__in__div
    margin-top 30px

.si__sign__in__link
    color $color-2
    font-size 18px
