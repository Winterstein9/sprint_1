$color-1 = #343434
$color-2 = #51b5c5

.index__main
    display flex
    align-items center
    justify-content center
    height 100%

.in__div__navigation
    position absolute
    top 10px
    left 10px
    a
        text-decoration underline
        cursor pointer
        color $color-2

.in__div__sign__in
    padding 30px 0 
    width 300px 
    background-color #343434
    display flex
    justify-content center
    border-radius 10px

.in__for__sign__in
    display flex
    flex-direction column
    align-items center

.in__div__password
    margin-top 25px

.in__login
.in__password
    width 180px
    background-color $color-1
    border none
    border-bottom 2px dashed $color-2
    text-align center
    font-size 20px
    outline none
    color silver

.in__div__sign__up
    margin-top 30px
    text-align: center

.in__link__sign__up
    color $color-2
    font-size 18px